<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<object-views xmlns="http://axelor.com/xml/ns/object-views"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:schemaLocation="http://axelor.com/xml/ns/object-views  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">


  <grid name="empdetails-grid"  title="EmpDetails"  model="com.axelor.empdetails.db.EmpDetails"> 
    <field name="empfullName" />
    <field name="email" />
    <field name="phone" />
    <field name="dateOfBirth" />
  </grid>

  <form name="empdetails-form"  title="EmpDetails"  model="com.axelor.empdetails.db.EmpDetails"> 
    
     <panel name="overviewPanel" title="Overview"> 
    
       <field name="empfullName" readonly="false">
         <editor> 
           <field name="empfirstName" colSpan="4"/>
           <field name="emplastName" colSpan="5"/>
         </editor>
       </field>
      
       <field name="dateOfBirth" />
      
	   <field name="email">
		      <viewer><![CDATA[ 
				        <a href="mailto:{{record.email}}">{{record.email}}</a>
		            ]]></viewer>
	   </field>
    
       <field name="phone">
				<viewer><![CDATA[
				  <a href="tel:{{record.phone}}">{{record.phone}}</a>
				]]></viewer>
	   </field>
     </panel>
     
     
    <panel name="aboutMePanel" title="About me">
        <field name="notes" showTitle="false" colSpan="12"/>
    </panel>
   
		    <panel-related name="empaddressesPanel" field="empaddresses" form-view="empaddress-form-popup"> 
		        <field name="street"/>
		        <field name="area"/>
		        <field name="city"/>
		        <field name="state"/>
		        <field name="zip"/>
		        <field name="country"/>
		    </panel-related>
		    
     <panel name="sidePanel" sidebar="true"> 
        <field name="createdOn"/>
        <field name="createdBy"/>
        <field name="updatedOn"/>
        <field name="updatedBy"/>
     </panel>
  </form>

  <form name="address-form-popup"
        title="EmpAddress"
        model="com.axelor.empdetails.db.EmpAddress">
    <panel title="Overview">
      <field name="street" />
      <field name="area" />
      <field name="city" />
      <field name="zip" />
      <field name="state" />
      <field name="country" />
    </panel>
  </form>

</object-views>