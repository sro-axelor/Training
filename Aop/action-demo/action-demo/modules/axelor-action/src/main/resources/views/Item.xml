		  <option value="teal" color="teal">Toy</option>
		  <option value="green" color="green">Charger</option>
		  <option value="lightgreen" color="lightgreen">Backcover</option>
		  <option value="lime" color="lime">Screenguard</option>
		  <option value="yellow" color="yellow">Ball</option>
		  <option value="purple" color="purple">Watch</option>
		  <option value="amber" color="amber">Playstation</option>
		  <option value="orange" color="orange">Tv</option>
		  <option value="deeporange" color="deeporange">Fridge</option>
		  <option value="brown" color="brown">Washingmachine</option>
