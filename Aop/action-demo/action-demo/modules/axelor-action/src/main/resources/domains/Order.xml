<?xml version="1.0" encoding="UTF-8"?>

<domain-models
	xmlns="http://axelor.com/xml/ns/domain-models"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/domain-models
  http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

	<module name="action" package="com.axelor.action.db" />

	<entity name="Order" cacheable="true">

		<!-- <integer name="orderId" min="1" max="1000" /> -->
		<!-- <string name="code"/> -->
		<string name="orderName" />
		<date name="orderDate" />
		<date name="deliveryDate" />
		<time name="timeTest" />
		<datetime name="dateTimeTest" />
		<boolean name="active" />
		<string name="orderStatus" selection="status" />
		<integer name="orderQuantity" selection="quantity" />
		<decimal name="price" />
		<binary name="binaryTest" />
		<!-- <many-to-many name="customerlist" ref="Customer" /> -->

		<one-to-many name="itemlist" ref="Item" mappedBy="orderes" />

		<track>
			<field name="orderName" />
		    <field name="orderDate" on="CREATE" />
		    <field name="deliveryDate" />
		    <field name="orderStatus"/>
		    <message if="true" on="CREATE" tag="info" >Order created.</message>
		    <message if="orderStatus == 'ordered'" tag="success">Order placed.</message>
		    <message if="orderStatus == 'draft'" tag="important">Draft</message>
		    <message if="orderStatus == 'canceled'" tag="warning">Canceled</message>
		    <message if="orderStatus == 'wishlist'" tag="info">Wishlist</message>
		</track>
		
	</entity>


</domain-models>