	</selection>


<!-- RefSelect.selection -->
	<selection name="RefSelect.selection">
		<option value="com.axelor.action.db.Order">Order</option>
		<option value="com.axelor.action.db.Customer"
			data-domain="self.email LIKE '%gmail%'" data-grid="customer-grid">Customer</option>
	</selection>


<!-- report test for param -->
	<action-report output="Customer-${date}-${time}"
		name="report-test-action" design="Customer.rptdesign" format="pdf">
		<param name="CustomerId" expr="eval: id" />
	</action-report>


<!-- report test for multiple record -->
	<action-report output="Customer-${date}-${time}"
		name="report-test-multiple-record-action"
		design="MultiCustomer.rptdesign" format="pdf">
	</action-report>


