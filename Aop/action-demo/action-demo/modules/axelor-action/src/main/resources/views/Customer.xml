<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

	<grid name="customer-grid" title="Login Details"
		model="com.axelor.action.db.Customer" editable="false"
		x-no-fetch="false" x-selector="checkbox" canArchive="true"
		canEdit="true" orderBy="seq" groupBy="gender">

		<hilite background="green" if="$contains(email, 'gmail.com')" />
		<!-- <field name="customerId" /> -->
		<field name="image" />
		<field name="firstName" />
		<field name="middleName" />
		<field name="lastName" />
		<field name="dateOfBirth" />
		<field name="email" />
		<field name="phone" />
		<field name="website" />
		<field name="userName" title="User Name" />
		<field name="password" />
		<field name="seq" title="Customer Id" />
		<field name="gender" />
	</grid>


	<form name="customer-form" title="Details"
		model="com.axelor.action.db.Customer" width="large" canSave="true"
		onNew="action-record-onnew-test" onSave="action-condition-test-gender ,com.axelor.action.controller.HelloController:validate(email)">

		<toolbar>
			<button onClick="report-test-action" name="report-test"
				title="Param-Report-Test" css="btn-warning" icon="fa-file" />
			<button onClick="report-test-multiple-record-action"
				name="report-multiple-record-test"
				title="MultipleRecord-Report-Test" css="btn-info" icon="fa-file" />
		</toolbar>

		<panel name="overviewPanel" title="Overview" icon="fa-user">
			<field name="seq" title="Customer Id" colSpan="2" />
			<field name="image" widget="image" colSpan="3" />

			<field name="imageUrl" widget="ImageSelect"
				selection="selection-for-image" colSpan="2" />

			<field name="icon" widget="ImageSelect"
				selection="selection-for-icon" colSpan="2" />
			<spacer colSpan="12" />
			<!-- <field name="customerId" title="Customer Id"/> -->

			<!-- title relation field -->
			<field name="title" x-type="many-to-one"
				x-target="com.axelor.action.db.Title" x-target-name="firstName"
				colSpan="3" />

			<field name="firstName" colSpan="3" widget="string" />
			<field name="middleName" colSpan="3" />
			<field name="lastName" colSpan="3" />

			<spacer colSpan="12" />

			<field name="dateOfBirth" colSpan="4" />
			<!-- <separator colSpan="12" /> -->
			<field name="email" colSpan="4"
				onChange="com.axelor.action.controller.HelloController:validate(email)">
				<viewer><![CDATA[ 
      						  <a href="mailto:{{record.email}}">{{record.email}}</a>
        				]]></viewer>
			</field>

			<field name="phone" widget="phone"
				x-placeholder-number-type="FIXED_LINE" colSpan="4" />
			<!-- <field name="phone" widget="phone" /> -->
			<spacer colSpan="12" />
			<!-- on select -->
			<field name="gender" onSelect="address.all" colSpan="6"
				widget="RadioSelect" />

			<field name="website" widget="url" colSpan="6" />

			<spacer colSpan="12" />

			<field name="userName" colSpan="3" title="User Name" />

			<field name="password" widget="password" colSpan="3"
				validIf="password.length &gt; 4" />

			<field name="reference" selection="RefSelect.selection"
				widget="RefSelect" colSpan="6" />

			<spacer colSpan="12" />

			<panel name="reviewPanel" colSpan="12">
				<field name="notes" title="About You" edit-window="popup"
					widget="html" colSpan="12" x-lite="true" />
			</panel>

			<field name="orderlist" widget="TagSelect" />

			<!-- <field name="orderlist" colSpan="12" css="order-list" > -->
			<!-- <viewer><![CDATA[ -->
			<!-- <order> -->
			<!-- {{record.orderName}} {{record.orderDate}}<br> -->
			<!-- {{record.deliveryDate}}, {{record.orderStatus}} , {{record.orderQuantity}}<br> -->
			<!-- </order> -->
			<!-- ]]></viewer> -->
			<!-- <editor x-show-titles="false"> -->
			<!-- <field name="orderName" colSpan="12"/> -->
			<!-- <field name="orderDate" colSpan="12"/> -->
			<!-- <field name="deliveryDate" colSpan="4"/> -->
			<!-- <field name="orderStatus" colSpan="4"/> -->
			<!-- <field name="orderQuantity" colSpan="4"/> -->
			<!-- </editor> -->
			<!-- </field> -->

		</panel>

		<panel-related field="addresslist" x-selector="checkbox"
			canSelect="true" />

		<panel name="detailsPanel" title="Details Panel">
			<field name="createdOn" />
			<field name="createdBy" />
			<field name="updatedOn" />
			<field name="updatedBy" />
		</panel>


		<panel sidebar="true">
			<button onClick="save" name="Save" title="Save"
				prompt="You want's to save Record" css="btn-success" />
			<button onClick="delete" name="Delete" title="Delete"
				prompt="You want's to deleted Record" css="btn-danger" />
		</panel>

<!-- buttons for test attributes -->
		<panel sidebar="true">
			<button onClick="actionattribute-for-test"
				name="collapse-test" title="Collapse Test" />
			<button onClick="actionrecord-for-actionmethod-text"
				name="actionmethod-test" title="ActionMethod Test" />
			<button onClick="item.all" name="test" title="Test" />
			<button onClick="add-address" name="adding-value"
				title="One Address Adding" />
			<button onClick="delete-address" name="deleting-value"
				title="One Address Deleting" />

			<!-- <button onClick="report-test-action" name="report-test" -->
			<!-- title="Report-Test" css="btn-success" /> -->
			
			<button onClick="com.axelor.action.controller.HelloController:say"
			        name="test-Controller" title="Test Controller" />
			<button onClick="data.import.test" name="action-import-test"
			        title="ActionImport Test" />
			
		</panel>

	</form>

