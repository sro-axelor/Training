<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="orderdetails-grid"
        title="OrderDetails"
        model="com.axelor.orderdetails.db.OrderDetails"> 
    <field name="fullName" />
    <field name="email" />
    <field name="phone" />
    <field name="orderDate" />
  	<field name="orderTime" />  
  </grid>
  
  
<!-- main form -->  
<form name="orderdetails-form"
        title="Order Details"
        model="com.axelor.orderdetails.db.OrderDetails" width="large" > 

        
<!-- item panel -->   
	   <panel-related name="itemPanel" field="item" form-view="item-form-popup"> 
	      <field name="name" />
	      <field name="brand" />
	      <field name="color" />
	      <field name="price" />
	    </panel-related>
 
   
<!-- Name panel -->            
	    <panel name="overviewPanel" title="Overview">
	      <field name="fullName" readonly="false" colSpan="8">
	        <editor> 
	          <field name="firstName" colSpan="4"/>
	          <field name="middleName" colSpan="4"/>
	          <field name="lastName" colSpan="4"/>
	        </editor>
	      </field>

<!-- order Date and time -->   
       <field name="orderDate" colSpan="2"/>
 	   <field name="orderTime" widget="time" colSpan="2"/>  
 
     
<!-- email field -->   
      <field name="email">
        <viewer><![CDATA[ 
        <a href="mailto:{{record.email}}">{{record.email}}</a>
        ]]></viewer>
      </field>
      
<!-- phone field -->   
      <field name="phone">
        <viewer><![CDATA[
        <a href="tel:{{record.phone}}">{{record.phone}}</a>
        ]]></viewer>
      </field>
    </panel>    
    
    
<!-- order addresses Panel -->
	    <panel-related name="orderaddressesPanel" title="Order Address" field="orderaddresses" form-view="orderaddress-form-popup"> 
	        <field name="street"/>
	        <field name="area"/>
	        <field name="city"/>
	        <field name="state"/>
	        <field name="zip"/>
	        <field name="country"/>
	    </panel-related>
 
 <!-- about Order Panel -->    
    <panel name="aboutOrderPanel" title="About Order">
        <field name="notes" showTitle="false" colSpan="12"/>
    </panel>
    
<!-- details Panel --> 
      <panel name="detailsPanel" > 
	      <field name="createdOn"/>
	      <field name="createdBy"/>
	      <field name="updatedOn"/>
	      <field name="updatedBy"/>  
	    </panel>
    
    
<!-- side Panel -->   
	     <!-- <panel name="sidePanel" sidebar="true"> 
	      <field name="createdOn"/>
	      <field name="createdBy"/>
	      <field name="updatedOn"/>
	      <field name="updatedBy"/>  
	    </panel> -->
</form>
  
  
<!-- Item form -->
	    <form name="item-form-popup"
	        title="Item"
	        model="com.axelor.orderdetails.db.Item">
	    <panel title="Item Overview">
	      <field name="name" />
	      <field name="brand" />
	      <field name="color" />
	      <field name="price" />
	    </panel>
	  </form>


<!-- order address form -->
	  <form name="orderaddress-form-popup"
	        title="OrderAddress"
	        model="com.axelor.orderdetails.db.OrderAddress">
	    <panel title="Overview">
	      <field name="street" />
	      <field name="area" />
	      <field name="city" />
	      <field name="zip" />
	      <field name="state" />
	      <field name="country" />
	    </panel>
      </form>

</object-views>