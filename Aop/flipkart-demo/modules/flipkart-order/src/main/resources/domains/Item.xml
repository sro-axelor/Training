<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models 
  https://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="orderdetails" package="com.axelor.orderdetails.db" />

  <entity name="Item" >
  
    <many-to-one name="orderdetails" ref="OrderDetails" required="true" />
    
    <string name="name" required="true" max="255" />
    <string name="brand" max="255" />
    <string name="color" max="255" />
    <decimal name="price" precision="8" scale="2" />
  </entity>

</domain-models>