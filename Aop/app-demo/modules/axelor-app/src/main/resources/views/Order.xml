<!-- grid view -->
<grid name="order-grid" title="Order" model="com.axelor.app.db.Order" orderBy="orderid" edit-icon="false" customSearch="false" x-selector="checkbox" freeSearch="none" x-no-fetch="false" >


<!-- button for custom view -->
    <toolbar>
  		<button name="customView" icon="fa-custom" title="Custom View" onClick="dashborad.action" css="btn-danger" />
	</toolbar>

<!--       <field name="orderSeq" title="Order Id"/> -->
 	  <field name="orderid"/>
 	  <field name="orderName"/>
 	  <field name="orderDate"/>
 	  <field name="orderStatus" />
      <field name="orderQuantity" />
</grid>



<!-- form view -->
<form name="order-form" title="Order" model="com.axelor.app.db.Order" canSave="false" canDelete="false">

