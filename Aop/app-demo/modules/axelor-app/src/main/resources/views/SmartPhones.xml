<?xml version="1.0" encoding="UTF-8"?>

<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

<!-- grid view -->
	<grid name="smartphones-grid" title="SmartPhones"
		model="com.axelor.app.db.SmartPhones">
		<field name="name" />
		<!-- <field name="color"/> -->
		<field name="price" />
	</grid>


<!-- form view -->
	<form name="smartphones-form" title="SmartPhones"
		model="com.axelor.app.db.SmartPhones">

		<panel>
			<field name="name" />
			<!-- <field name="color"/> -->
			<field name="price" />
			<field name="aphone" colSpan="12" />
		</panel>
	</form>
</object-views>