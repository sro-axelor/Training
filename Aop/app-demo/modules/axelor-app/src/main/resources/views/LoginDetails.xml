<!-- Field tooltip -->
		<panel>
			<field name="customer">
				<tooltip depends="fullName">
							  <![CDATA[
							  <strong>Name: </strong><span>{{record.fullName}}</span>
							  ]]>
							  </tooltip>
			</field>
		</panel>


