  <!-- editor for a many-to-one field -->
	<field name="fullName">
		  <editor x-viewer="true">
		     <field name="firstName" />
		     <field name="middleName" />
		     <field name="lastName" />
		     <field name="email" />
		  </editor>
	</field>

		<!-- editor for a one-to-many field -->
	  <field name="emails" showTitle="false">
		 <editor layout="panel" onNew="compute-default-email">
		    <field name="email" colSpan="12"/>
		    <field name="primary" widget="toggle" x-icon="fa-star-o" x-icon-active="fa-star" x-exclusive="true" />
		    <field name="Output" widget="toggle" x-icon="fa-ban" />
		    <field name="invalid" widget="toggle" x-icon="fa-exclamation-circle" />
		 </editor>
	  </field>
</panel>
 
 
 
   
    
