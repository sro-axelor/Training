<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">


<!-- grid view -->
	<grid name="logindetails-grid" title="Login Details"
		model="com.axelor.app.db.LoginDetails" editable="false"
		x-no-fetch="false" x-selector="checkbox" canArchive="true"
		canEdit="true" orderBy="seq" groupBy="gender">

		<toolbar>
			<button name="masterView" icon="fa-master" title="MasterView"
				onClick="two.login.view" css="btn-info" />
		</toolbar>

		<hilite background="green" if="$contains(email, 'gmail.com')" />
		<field name="fullName" />
		<field name="email" />
		<field name="phone" />
		<field name="seq" title="Login Id" />
		<field name="gender" />
	</grid>


<!-- main form -->
	<form name="logindetails-form" title="Login Details"
		model="com.axelor.app.db.LoginDetails" width="large" canSave="false">

<!-- Name panel -->
		<panel name="overviewPanel" title="Overview">


<!-- menu it is not working i have to check it again -->
			<menu>
				<item action="order.all" title="Order menu" />
			</menu>

<!-- binary photo -->
			<field name="photo" />

<!-- entery-logindetails -->
			<field name="seq" title="Login Id" />

<!-- name feild -->
			<field name="fullName" readonly="false" colSpan="8">
				<editor>
					<field name="firstName" colSpan="4" />
					<field name="middleName" colSpan="4" />
					<field name="lastName" colSpan="4" />
				</editor>
			</field>

<!-- order Date and time -->
			<field name="loginDate" colSpan="2" />
			<field name="loginTime" widget="time" colSpan="2" />

<!-- email field -->
			<field name="email">
				<viewer><![CDATA[ 
        <a href="mailto:{{record.email}}">{{record.email}}</a>
        ]]></viewer>
			</field>

<!-- phone field -->
			<field name="phone">
				<viewer><![CDATA[
        <a href="tel:{{record.phone}}">{{record.phone}}</a>
        ]]></viewer>
			</field>

<!-- enum feild -->
			<field name="gender" />

<!-- boolean -->
			<field name="active" title="Term And Condition" />

		</panel>


<!-- order addresses Panel -->
		<panel-related name="personaddressesPanel"
			title="Person Address" field="personaddresses"
			form-view="personaddress-form-popup" editable="true" canMove="true"
			height="4" x-selector="checkbox">
			<field name="street" />
			<field name="area" />
			<field name="city" />
			<field name="state" />
			<field name="zip" />
			<field name="country" />
		</panel-related>


<!-- about Order Panel -->
		<panel name="reviewPanel" title="About You">
			<field name="notes" title="About You" colSpan="12"
				edit-window="popup" />
		</panel>


<!-- field editor -->
		<panel title="Custom" sidebar="true">
			<!-- <field name="fullName"> -->
			<!-- <editor> -->
			<!-- <field name="firstName" /> -->
			<!-- <field name="middleName" /> -->
			<!-- <field name="lastName" /> -->
			<!-- </editor> -->
			<!-- </field> -->

			<!-- editor for a many-to-one field -->
			<field name="fullName">
				<editor x-viewer="true">
					<field name="firstName" />
					<field name="middleName" />
					<field name="lastName" />
					<field name="email" />
				</editor>
			</field>

			<!-- editor for a one-to-many field -->
			<field name="emails" showTitle="false">
				<editor layout="panel" onNew="compute-default-email">
					<field name="email" colSpan="12" />
					<field name="primary" widget="toggle" x-icon="fa-star-o"
						x-icon-active="fa-star" x-exclusive="true" />
					<field name="Output" widget="toggle" x-icon="fa-ban" />
					<field name="invalid" widget="toggle"
						x-icon="fa-exclamation-circle" />
				</editor>
			</field>
		</panel>


<!-- details Panel -->
		<panel name="detailsPanel" title="Details Panel">
			<field name="createdOn" />
			<field name="createdBy" />
			<field name="updatedOn" />
			<field name="updatedBy" />
		</panel>

